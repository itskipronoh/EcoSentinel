{
  "routes": [
    {
      "route": "/index.html",
      "serve": "/index.html"
    },
     {
      "route": "/azure-maps-config.js",
      "serve": "/azure-maps-config.js"
    },
    {
      "route": "/chat.html",
      "serve": "/chat.html"
    },
    {
      "route": "/alerts.html", 
      "serve": "/alerts.html"
    },
    {
      "route": "/about.html",
      "serve": "/about.html"
    },
    {
      "route": "/chat.html",
      "serve": "/chat.html"
    },
    {
      "route": "/alerts.html",
      "serve": "/alerts.html"
    },
    {
      "route": "/about.html",
      "serve": "/about.html"
    },
     {
      "route": "/api/*",
      "allowedRoles": ["anonymous"]
    }

  ],
  "navigationFallback": {
    "rewrite": "/index.html",
    "exclude": [
      "/assets/*",
      "/images/*", 
      "/css/*",
      "/js/*",
      "*.{css,js,jpg,png,gif,ico,svg,woff,woff2,ttf,eot}"
    ]
  },
  "mimeTypes": {
    ".html": "text/html",
    ".js": "text/javascript", 
    ".css": "text/css",
    ".json": "application/json",
    ".png": "image/png",
    ".jpg": "image/jpeg",
    ".gif": "image/gif",
    ".ico": "image/x-icon",
    ".svg": "image/svg+xml"
  },
  "globalHeaders": {
    "Cache-Control": "no-cache",
    "X-Content-Type-Options": "nosniff",
    "X-Frame-Options": "DENY",
    "X-XSS-Protection": "1; mode=block"
  },
  "responseOverrides": {
    "404": {
      "rewrite": "/index.html"
    }

  },
  "platform": {
    "apiRuntime": "node:18"
  }

}