{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ESNext",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "incremental": true,
    "composite": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "dist",
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "lib": ["ESNext"]
  },
  "include": ["src/**/*", "types/**/*"]

}
